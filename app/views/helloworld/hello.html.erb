<h1>hello...world..!!</h1>
<%= form_for :article do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
  	<%= f.label :admin? %>
  	<%= f.check_box :admin %>
  </p>
  <p>
    <%= f.submit %> 
  </p>
<% end %>
